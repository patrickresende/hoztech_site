# Configuração padrão para todos os arquivos
* text=auto

# Arquivos que devem manter LF
*.py text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf
*.svg text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Arquivos binários que não devem ser modificados
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.rar binary
*.7z binary
*.tar binary
*.gz binary

# Arquivos específicos do Windows
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.reg text eol=crlf

# Arquivos específicos do Django
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary
*.db binary
*.sqlite3 binary 